			<%= f.label :organization  %>
			<%= f.text_field :organization, id: "organization", class: "full-width", value: "", style: "margin-bottom:20px;" %>
			</p>
			<p class="inline-small-label">
				<%= f.label :email, id: "email", class: "full-width", value: "", style: "margin-bottom:20px;"%>
			</p>
			<%= f.button "Register", class: "float-right", type: "submit" %>

			<% end %>


